{
	"manifest_version": 3,
	"author": "Myles Trevino",
	"name": "Hyperpass",
	"version": "2024.3.21",
	"description": "A modern, unified password manager.",
	"homepage_url": "https://hyperpass.org",
	"icons": {
		"16": "16.png",
		"32": "32.png",
		"64": "64.png",
		"128": "128.png"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	 },
	"permissions": [
		"alarms", "scripting", "storage", "tabs",
		"activeTab", "contextMenus", "offscreen"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "16.png",
			"32": "32.png",
			"64": "64.png",
			"128": "128.png"
		}
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+H"
			},
			"description": "Activate extension"
		},
		"Autofill Username":
		{
			"suggested_key": {
				"default": "Alt+U"
			},
			"description": "Autofill username"
		},
		"Autofill Password":
		{
			"suggested_key": {
				"default": "Alt+P"
			},
			"description": "Autofill password"
		}
	},
	"background": {
		"service_worker": "service-worker-wrapper.js"
	}
}
