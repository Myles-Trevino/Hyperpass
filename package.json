{
	"author": {
		"name": "Laventh",
		"email": "support@laventh.com"
	},
	"name": "hyperpass",
	"productName": "Hyperpass",
	"version": "2021.7.13",
	"description": "A modern, unified password manager.",
	"homepage": "hyperpass.org",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Myles-Trevino/Hyperpass"
	},
	"main": "projects/hyperpass-desktop/electron.js",
	"private": true,
	"scripts": {
		"ng": "ng",
		"lint": "ng lint",
		"build": "npm run build:core && npm run build:desktop && npm run release:desktop && npm run build:extension && npm run build:mobile && npm run build:website",
		"build:core": "ng build --project=hyperpass-core",
		"build:api": "rm -rf ./builds/hyperpass-api && tsc --project projects/hyperpass-api/tsconfig.json && cp projects/hyperpass-api/source/email-template.html ./builds/hyperpass-api && cp package-lock.json ./builds/hyperpass-api",
		"build:desktop": "ng build --project=hyperpass-desktop --configuration production --base-href ./",
		"release:desktop": "electron-builder",
		"start:desktop": "electron ./projects/hyperpass-desktop/electron.js",
		"build:extension": "ng build --project=hyperpass-extension --configuration production",
		"build:mobile": "ng build --project=hyperpass-mobile --configuration production",
		"serve:website": "ng serve --project=hyperpass-website",
		"build:website": "ng build --project=hyperpass-website --configuration production && ng run hyperpass-website:server:production"
	},
	"build": {
		"appId": "com.laventh.hyperpass",
		"artifactName": "${productName} ${version}.${ext}",
		"directories": {
			"output": "builds/hyperpass-desktop/release",
			"buildResources": "projects/hyperpass-desktop/release_resources"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"uninstallDisplayName": "${productName}",
			"createDesktopShortcut": "always"
		},
		"mac": {
			"target": "pkg"
		},
		"linux": {
			"target": "deb"
		},
		"deb": {
			"synopsis": "A modern, unified password manager.",
			"description": "The desktop application for the Hyperpass password manager."
		}
	},
	"dependencies": {
		"@angular/animations": "~12.1.0",
		"@angular/cdk": "^12.1.0",
		"@angular/common": "~12.1.0",
		"@angular/compiler": "~12.1.0",
		"@angular/core": "~12.1.0",
		"@angular/forms": "~12.1.0",
		"@angular/platform-browser": "~12.1.0",
		"@angular/platform-browser-dynamic": "~12.1.0",
		"@angular/platform-server": "^12.1.0",
		"@angular/router": "~12.1.0",
		"@capacitor/android": "^3.0.0",
		"@capacitor/app": "^1.0.0",
		"@capacitor/core": "^3.0.0",
		"@capacitor/device": "^1.0.0",
		"@capacitor/ios": "^3.0.0",
		"@capacitor/splash-screen": "^1.0.0",
		"@capacitor/status-bar": "^1.0.0",
		"@capacitor/storage": "^1.0.0",
		"@ionic/angular": "^5.6.7",
		"@nguniversal/express-engine": "^12.1.0",
		"capacitor-native-biometric": "^3.0.1",
		"date-fns": "^2.21.3",
		"dotenv": "^10.0.0",
		"fflate": "^0.7.0",
		"file-saver": "^2.0.5",
		"handlebars": "^4.7.7",
		"hash-wasm": "^4.6.0",
		"joi": "^17.4.0",
		"libsodium-wrappers": "^0.7.9",
		"lodash": "^4.17.21",
		"mongodb": "^3.6.8",
		"ngx-electron": "^2.2.0",
		"ngx-scrollbar": "^7.5.6",
		"nodemailer": "^6.6.1",
		"papaparse": "^5.3.0",
		"parse-domain": "^3.0.3",
		"path": "^0.12.7",
		"rxjs": "~6.6.0",
		"swiper": "^6.6.2",
		"three": "^0.128.0",
		"tslib": "^2.2.0",
		"uuid": "^8.3.2",
		"webextension-polyfill-ts": "^0.25.0",
		"zone.js": "^0.11.4"
	},
	"devDependencies": {
		"@angular-builders/custom-webpack": "^12.1.0",
		"@angular-devkit/build-angular": "^12.1.0",
		"@angular-eslint/builder": "^12.2.0",
		"@angular-eslint/eslint-plugin": "^12.2.0",
		"@angular-eslint/eslint-plugin-template": "^12.2.0",
		"@angular-eslint/schematics": "^12.2.0",
		"@angular-eslint/template-parser": "^12.2.0",
		"@angular/cli": "^12.1.0",
		"@angular/compiler-cli": "^12.1.0",
		"@capacitor/cli": "^3.0.0",
		"@nguniversal/builders": "^12.1.0",
		"@types/estree": "^0.0.47",
		"@types/express": "^4.17.11",
		"@types/file-saver": "^2.0.2",
		"@types/libsodium-wrappers": "^0.7.9",
		"@types/lodash": "^4.14.170",
		"@types/mongodb": "^3.6.16",
		"@types/node": "^14.17.0",
		"@types/nodemailer": "^6.4.2",
		"@types/papaparse": "^5.2.5",
		"@types/three": "^0.128.0",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"electron": "^12.0.9",
		"electron-builder": "^22.10.5",
		"eslint": "^7.6.0",
		"eslint-plugin-import": "^2.23.3",
		"eslint-plugin-jsdoc": "^35.0.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"ng-packagr": "^12.1.0",
		"ts-node": "^10.0.0",
		"typescript": "~4.2.4"
	}
}
