{
	"author": {
		"name": "Laventh",
		"email": "support@laventh.com"
	},
	"name": "hyperpass",
	"productName": "Hyperpass",
	"version": "2021.10.10",
	"description": "A modern, unified password manager.",
	"homepage": "hyperpass.org",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Myles-Trevino/Hyperpass"
	},
	"main": "projects/hyperpass-desktop/electron.js",
	"private": true,
	"scripts": {
		"ng": "ng",
		"lint": "ng lint && echo Linting \"hyperpass-api\"... && eslint \"projects/hyperpass-api/**/*.ts\" && echo Done.",
		"build-all": "npm run build-core && npm run build-api && npm run build-website && npm run build-extension && npm run build-mobile && npm run build-desktop",
		"build-core": "ng run hyperpass-core:build",
		"build-api": "tsc --project projects/hyperpass-api/tsconfig.json",
		"build-website": "ng run hyperpass-website:build:production && ng run hyperpass-website:server:production",
		"test-website": "ng run hyperpass-website:serve-ssr",
		"build-extension": "ng run hyperpass-extension:build:production",
		"build-mobile": "ng run hyperpass-mobile:build:production",
		"build-desktop": "ng run hyperpass-desktop:build:production --base-href ./",
		"release-desktop": "electron-builder",
		"start-desktop": "electron ./projects/hyperpass-desktop/electron.js"
	},
	"build": {
		"appId": "com.laventh.hyperpass",
		"artifactName": "${productName} ${version}.${ext}",
		"directories": {
			"output": "builds/hyperpass-desktop/release",
			"buildResources": "projects/hyperpass-desktop/release_resources"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"uninstallDisplayName": "${productName}",
			"createDesktopShortcut": "always"
		},
		"mac": {
			"target": "pkg"
		},
		"linux": {
			"target": "deb"
		},
		"deb": {
			"synopsis": "A modern, unified password manager.",
			"description": "The desktop application for the Hyperpass password manager."
		}
	},
	"dependencies": {
		"@angular/animations": "^12.2.9",
		"@angular/cdk": "^12.2.9",
		"@angular/common": "^12.2.9",
		"@angular/compiler": "^12.2.9",
		"@angular/core": "^12.2.9",
		"@angular/forms": "^12.2.9",
		"@angular/platform-browser": "^12.2.9",
		"@angular/platform-browser-dynamic": "^12.2.9",
		"@angular/platform-server": "^12.2.9",
		"@angular/router": "^12.2.9",
		"@capacitor/android": "^3.2.4",
		"@capacitor/app": "^1.0.3",
		"@capacitor/core": "^3.2.4",
		"@capacitor/device": "^1.0.3",
		"@capacitor/ios": "^3.2.4",
		"@capacitor/splash-screen": "^1.1.3",
		"@capacitor/status-bar": "^1.0.3",
		"@capacitor/storage": "^1.2.0",
		"@ionic/angular": "^5.8.3",
		"@nguniversal/express-engine": "^12.1.1",
		"capacitor-native-biometric": "^3.0.3",
		"cors": "^2.8.5",
		"date-fns": "^2.25.0",
		"dotenv": "^10.0.0",
		"fflate": "^0.7.1",
		"file-saver": "^2.0.5",
		"fs": "^0.0.1-security",
		"handlebars": "^4.7.7",
		"hash-wasm": "^4.9.0",
		"joi": "^17.4.2",
		"libsodium-wrappers": "^0.7.9",
		"lodash": "^4.17.21",
		"mongodb": "^4.1.3",
		"ngx-scrollbar": "^8.0.0",
		"nodemailer": "^6.6.5",
		"papaparse": "^5.3.1",
		"parse-domain": "^4.1.0",
		"path": "^0.12.7",
		"rxjs": "^7.4.0",
		"swiper": "^7.0.8",
		"three": "^0.133.1",
		"tslib": "^2.3.1",
		"uuid": "^8.3.2",
		"webextension-polyfill": "^0.8.0",
		"zone.js": "^0.11.4"
	},
	"devDependencies": {
		"@angular-builders/custom-webpack": "^12.1.3",
		"@angular-devkit/build-angular": "^12.2.9",
		"@angular-eslint/builder": "^12.5.0",
		"@angular-eslint/eslint-plugin": "^12.5.0",
		"@angular-eslint/eslint-plugin-template": "^12.5.0",
		"@angular-eslint/schematics": "^12.5.0",
		"@angular-eslint/template-parser": "^12.5.0",
		"@angular/cli": "^12.2.9",
		"@angular/compiler-cli": "^12.2.9",
		"@capacitor/cli": "^3.2.4",
		"@nguniversal/builders": "^12.1.1",
		"@types/cors": "^2.8.12",
		"@types/estree": "^0.0.50",
		"@types/express": "^4.17.13",
		"@types/file-saver": "^2.0.3",
		"@types/libsodium-wrappers": "^0.7.9",
		"@types/lodash": "^4.14.175",
		"@types/node": "^16.10.3",
		"@types/nodemailer": "^6.4.4",
		"@types/papaparse": "^5.2.6",
		"@types/three": "^0.133.0",
		"@types/uuid": "^8.3.1",
		"@types/webextension-polyfill": "^0.8.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"electron": "^15.1.2",
		"electron-builder": "^22.13.1",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsdoc": "^36.1.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"ng-packagr": "^12.2.3",
		"ts-node": "^10.2.1",
		"typescript": "^4.3.5"
	}
}
